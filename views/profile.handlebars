<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a new Blog Post:</h3>

    <form class="form new-blogPost-form">
      <div class="form-group">
        <label for="blogPost-name">Post Name:</label>
        <input class="form-input" type="text" id="blogPost-name" name="blogPost-name" />
      </div>

      <div class="form-group">
        <label for="blogPost-desc">Post:</label>
        <textarea class="form-input" id="blogPost-desc" name="blogPost-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if blogPosts.length}}
  <div class="col-md-6 blogPost-list">
    <h3>Current blogPosts:</h3>

    {{#each blogPosts as |blogPost|}}
    <div class="row mb-2">
      <div class="col-md-12">
        <h4><a href="/blogPost/{{blogPost.id}}">{{blogPost.name}}</a></h4>
      </div>
    </div>
    <div class="row mb-2">
      <div class="col-md-12">
        <div class="blogPost-card">
          <div class="blogPost-content" data-id="{{blogPost.id}}">
            <h4 class="blogPost-name">{{blogPost.name}}</h4>
            <p class="blogPost-desc">{{blogPost.description}}</p>
            <div class="blogPost-buttons">
              <button class="btn btn-sm btn-primary edit-btn" data-id="{{blogPost.id}}">EDIT</button>
              <button class="btn btn-sm btn-danger delete-btn" data-id="{{blogPost.id}}">DELETE</button>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>


<script src="./js/profile.js"></script> 
